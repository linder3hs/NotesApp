<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/picture_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_toStartOf="@+id/menu_button"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="TÃ­tulo de la nota"/>

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_below="@+id/title_text"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Contenido de la nota ..."/>

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_toStartOf="@+id/menu_button"
            android:layout_below="@+id/content_text"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="18 de Agosto"
            app:relative_time_prefix="Creado "/>

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_dots"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox android:id="@+id/favorite_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/starStyle"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/menu_button"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
